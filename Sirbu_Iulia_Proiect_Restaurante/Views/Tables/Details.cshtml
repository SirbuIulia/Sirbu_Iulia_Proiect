@{
}
@model Sirbu_Iulia_Proiect_Restaurante.Models.Table

<h1>Detalii Masă</h1>

<div>
    <h4>Masă</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Restaurant
        </dt>
        <dd class="col-sm-10">
            @Model.Restaurant?.Name
        </dd>

        <dt class="col-sm-2">
            Număr
        </dt>
        <dd class="col-sm-10">
            @Model.Number
        </dd>

        <dt class="col-sm-2">
            Capacitate
        </dt>
        <dd class="col-sm-10">
            @Model.Capacity
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary" asp-route-restaurantId="@Model.RestaurantID">Înapoi la listă</a>
</div>
