@{
}
@model Sirbu_Iulia_Proiect_Restaurante.Models.Table

<h1>Șterge Masă</h1>

<h3>Ești sigur că vrei să ștergi această masă?</h3>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        Restaurant
    </dt>
    <dd class="col-sm-10">
        @Model.Restaurant?.Name
    </dd>

    <dt class="col-sm-2">
        Număr Masă
    </dt>
    <dd class="col-sm-10">
        @Model.Number
    </dd>

    <dt class="col-sm-2">
        Capacitate
    </dt>
    <dd class="col-sm-10">
        @Model.Capacity
    </dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Șterge</button>
        <a asp-action="Index" asp-route-restaurantId="@Model.RestaurantID" class="btn btn-secondary">Anulează</a>
    </div>
</form>
