    }

    #notifications-list {
        list-style-type: none;
        margin: 0;
        padding: 0;
        max-height: 300px;
        overflow-y: auto;
    }

        #notifications-list li {
            padding: 8px;
            margin: 4px 0;
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 4px;
