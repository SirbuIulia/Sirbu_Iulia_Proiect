@{
    ViewData["Title"] = "Chat";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <p class="text-muted">Chat with other users in real time</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-lg-2 col-md-3 col-sm-4">
                    <label for="messageInput" class="form-label">Message</label>
                </div>
                <div class="col-lg-8 col-md-7 col-sm-6">
                    <input type="text" id="messageInput" class="form-control" placeholder="Type your message here..." />
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 text-end">
                    <button id="sendButton" class="btn btn-primary w-100" disabled>Send</button>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <h5>Messages</h5>
        <div class="card shadow-sm">
            <div class="card-body">
                <ul id="messagesList" class="list-unstyled">
                    
                </ul>
            </div>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
