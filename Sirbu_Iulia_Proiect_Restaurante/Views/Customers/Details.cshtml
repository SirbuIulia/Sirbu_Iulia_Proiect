@model Sirbu_Iulia_Proiect_Restaurante.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<h1 class="text-primary mb-4">Customer Details</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title text-info">Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Phone)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>
        </dl>
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.CustomerID" class="btn btn-primary me-2">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>
