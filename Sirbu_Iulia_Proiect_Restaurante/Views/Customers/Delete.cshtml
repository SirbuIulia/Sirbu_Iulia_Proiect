@model Sirbu_Iulia_Proiect_Restaurante.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h1 class="text-primary mb-4">Delete Customer</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title text-danger">Are you sure you want to delete this customer?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Phone)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="CustomerID" />
            <button type="submit" class="btn btn-danger me-2">Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </form>
    </div>
</div>
