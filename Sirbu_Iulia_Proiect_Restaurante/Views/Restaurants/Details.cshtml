@model Sirbu_Iulia_Proiect_Restaurante.Models.Restaurant

@{
    ViewData["Title"] = "Detalii Restaurant";
}

<div class="container mt-4">
    <h1 class="display-5">Detalii Restaurant</h1>
    <hr />

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">@Model.Name</h4>
            <dl class="row">
                <dt class="col-sm-3">Adresă</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Tip Bucătărie</dt>
                <dd class="col-sm-9">@Model.CuisineType?.Name</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ID">
            <i class="bi bi-pencil-square"></i> Editează
        </a>
        <a class="btn btn-secondary" asp-action="Index">Înapoi la listă</a>
    </div>
</div>
