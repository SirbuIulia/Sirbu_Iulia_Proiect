@model Sirbu_Iulia_Proiect_Restaurante.Models.CuisineType

@{
    ViewData["Title"] = "Detalii Tip Bucătărie";
}

<h1>@Model.Name</h1>

<h2>Restaurante Asociate</h2>

@if (Model.Restaurants != null && Model.Restaurants.Any())
{
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nume</th>
                <th>Adresă</th>
                <th>Telefon</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var restaurant in Model.Restaurants)
            {
                <tr>
                    <td>@restaurant.Name</td>
                    <td>@restaurant.Address</td>
                    <td>@restaurant.Phone</td>
                    <td>
                        <a asp-controller="Restaurants" asp-action="Details" asp-route-id="@restaurant.ID" class="btn btn-info btn-sm">Detalii</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Nu există restaurante asociate acestui tip de bucătărie.</p>
}
<a asp-action="Index" class="btn btn-secondary">Înapoi la listă</a>
