@model Sirbu_Iulia_Proiect_Restaurante.Models.CuisineType

@{
    ViewData["Title"] = "Șterge Tip Bucătărie";
}

<div class="container mt-4">
    <h1 class="display-5 text-danger">Șterge Tip Bucătărie</h1>
    <hr />
    <h3 class="text-danger">Sigur doriți să ștergeți acest tip de bucătărie?</h3>
    <dl class="row">
        <dt class="col-sm-3">Nume</dt>
        <dd class="col-sm-9">@Model.Name</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Șterge</button>
        <a class="btn btn-secondary" asp-action="Index">Anulează</a>
    </form>
</div>
