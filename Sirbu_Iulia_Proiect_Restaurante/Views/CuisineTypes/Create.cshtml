@model Sirbu_Iulia_Proiect_Restaurante.Models.CuisineType

@{
    ViewData["Title"] = "Adaugă Tip Bucătărie";
}

<div class="container mt-4">
    <h1 class="display-5">Adaugă Tip Bucătărie</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Introduceți numele tipului de bucătărie..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Salvează" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index">Anulează</a>
                </div>
            </form>
        </div>
    </div>
</div>
