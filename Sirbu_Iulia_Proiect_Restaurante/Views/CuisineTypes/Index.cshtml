@model IEnumerable<Sirbu_Iulia_Proiect_Restaurante.Models.CuisineType>

@{
    ViewData["Title"] = "Tipuri de Bucătărie";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-4">Tipuri de Bucătărie</h1>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Adaugă Tip Bucătărie
        </a>
    </div>

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.ID">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.ID">
                                <i class="bi bi-eye"></i> Detalii
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ID">
                                <i class="bi bi-trash"></i> Șterge
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
